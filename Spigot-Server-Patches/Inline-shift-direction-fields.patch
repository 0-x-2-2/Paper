         this.k = enumdirection_enumaxis;
         this.l = enumdirection_enumaxisdirection;
         this.m = baseblockposition;
+        // Paper start
+        this.adjX = baseblockposition.getX();
+        this.adjY = baseblockposition.getY();
+        this.adjZ = baseblockposition.getZ();
