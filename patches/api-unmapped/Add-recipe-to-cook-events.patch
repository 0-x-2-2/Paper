+        // Paper end
         super(block);
         this.source = source;
         this.result = result;
         this.cancelled = false;
+        this.recipe = recipe; // Paper
     }
 
     /**
@@ -0,0 +0,0 @@ public class BlockCookEvent extends BlockEvent implements Cancellable {
         this.cancelled = cancel;
     }
 
