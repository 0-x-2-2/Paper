-                                    blocksign.openTextEdit(entityhuman, tileentitysign, true);
+                                    blocksign.openTextEdit(entityhuman, tileentitysign, true, io.papermc.paper.event.player.PlayerOpenSignEvent.Cause.PLACE); // Paper
                                 }
