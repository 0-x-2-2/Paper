+                }
+                continue;
+            } else {
+                sectionEmpty[i] = false;
+            }
+            // Paper end
             CompoundTag data = new CompoundTag();
 
             data.put("block_states", ChunkSerializer.BLOCK_STATE_CODEC.encodeStart(NbtOps.INSTANCE, cs[i].getStates()).get().left().get());
